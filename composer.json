{
    "name": "laris/laris-gen-ai",
    "description": "Laravel AI Code Generator using OpenRouter",
    "license": "MIT",
    "authors": [
        {
            "name": "Arshia",
            "email": "itarrshia@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.8.2",
        "illuminate/filesystem": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "Arshia\\LarisAIGen\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arshia\\LarisAIGen\\LarisAIGenServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": false,
            "sort-packages": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}